<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <%- include ('../partials/head.ejs') %>
</head>

  <body>
    <h1>MONNAIE</h1>

    <a class="button" id="new-btn" href="/transactions/new">New Transaction</a>

    <div class="balance">
      <h6>Balance: </h6>
      <h3><%=records.amount%></h3>
    </div>


    <form class="" action="/transactions" method="POST">
    <div class="send-money">
      <h5>Send Money</h5>
      <label for="receiver">Receiver</label>
      <input type="text" name="receiver" value="">
      <label for="amount">Amount</label>
      <input type="text" name="amount" value="">
      <input type="submit" name="" value="Confirm Send">
    </div>
    </form>

    <div class="transaction-buttons">
      <a class="button" href="#">Top Up</a>
      <a class="button" href="#">Pay Bill</a>
      <a class="button" href="#">Get Cash</a>
    </div>

    <h4> Recent Transactions</h4>

    <div class="recent-transactions">
      <% for (let i = 0; i < records.length; i++){%>
        <div class="record-item">
        <label for="transaction">Transaction: </label><a href="/transactions/<%=records[i].id%>"><%=records[i].transaction%></a><br/>
        <label for="amount">Amount: </label>$<a href="/transactions/<%=records[i].id%>"><%=records[i].amount%></a><br/>
        </div>
      <%}%>

    </div>

  </body>
</html>
