<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('../partials/head.ejs') %>
  </head>

  <body>
    <nav class="container">
      <%- include ('../partials/nav.ejs') %>
    </nav>

    <h2>New Transaction</h2>

    <!-- Source for the Date Auto Input: https://css-tricks.com/prefilling-date-input/  -->
    <% let today = new Date().toISOString().substr(0, 10);%>

    <div class="new-item">
      <!-- <p for="transaction">Transaction: <%=txType%></p> -->
      <form class="" action="/transactions" method="POST">
        <input type="text" name="date" value="<%=today%>" hidden>
        <input type="text" name="transaction" value="<%=txType%>" hidden>
        <% if (txType === "PayBill" || txType === "SendMoney") {%>
          <label for="receiver">Receiver:</label>
          <input type="text" name="receiver" value="">
        <%}%>
        <label for="amount">Amount:</label>
        <input type="number" name="amount" value="">
        <label for="confirmed">Confirmed: </label>
        <input type="checkbox" name="confirmed">

        <input type="submit" name="" value="Submit">
      </form>
    </div>

    <nav class="back">
      <a class="button" href="/transactions">BACK</a>
    </nav>

  </body>
</html>
